<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp">

        <TextView
            android:layout_weight="1"
            android:id="@+id/goods_item_name"
            android:textSize="@dimen/textSize_16sp"
            android:layout_gravity="left"
            android:gravity="center_vertical|right"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <EditText
            android:textIsSelectable="false"
            android:singleLine="true"
            android:id="@+id/goods_item_count"
            android:textSize="@dimen/textSize_16sp"
            android:hint="@string/goods_item_count"
            android:inputType="number"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:layout_weight="0.75"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:id="@+id/goods_item_unit"
            android:textSize="@dimen/textSize_16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


        <CheckBox
            android:checked="false"
            android:padding="0dp"
            android:id="@+id/goods_item_discount"
            android:textSize="@dimen/textSize_16sp"
            android:text="@string/goods_item_discount"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <CheckBox
            android:checked="false"
            android:padding="0dp"
            android:id="@+id/goods_item_free"
            android:textSize="@dimen/textSize_16sp"
            android:text="@string/goods_item_free"
            android:gravity="left|center_vertical"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:layout_gravity="bottom"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_0.5dp"/>
</FrameLayout>
